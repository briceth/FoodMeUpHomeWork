{
	"extends": [
		"prettier",
		"prettier/react",
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"plugins": ["react", "prettier"],
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"parser": "babel-eslint",
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"bracketSpacing": true,
				"jsxBracketSameLine": true,
				"trailingComma": "all"
			}
		]
	}
}
